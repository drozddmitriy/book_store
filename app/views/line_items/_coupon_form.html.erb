<%= form_with url: coupon_path, method: :put do |f| %>
<div class="input-group general-input-group">
  <label class="input-label">Enter Your Coupon Code</label>
  <%= f.text_field :coupon, class: 'form-control mb-30', required: true %>
  <div>
    <%= f.submit "Apply Coupon", class: 'btn btn-primary mr-5 mb-15' do %>
    <button></button>
  <% end %>
</div>
</div>
<% end %>
