<div class="col-md-5 mb-40">
  <h3 class="general-subtitle mt-0">
    <%= I18n.t('views.addresses.shipping') %>
  </h3>
  <%= f.input :firstname, required: false %>
  <%= f.input :lastname, required: false %>
  <%= f.input :address, required: false %>
  <%= f.input :city, required: false %>
  <%= f.input :zip, required: false %>
  <%= f.input :country, required: false, prompt: "country" %>
  <%= f.input :phone, required: false, placeholder: "+380 505607361" %>
  <%= f.input :shipping, as: :hidden, input_html: { value: :shipping } %>
  <%= f.button :submit, I18n.t('views.addresses.save'), class:"btn btn-default btn" %>
</div>
