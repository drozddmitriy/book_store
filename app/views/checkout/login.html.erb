<main class="container">
  <div class="row">
    <div class="col-md-5 mb-40">
      <div class="text-center">
        <h3 class="general-subtitle">Returning Customer</h3>
        <%= link_to user_facebook_omniauth_authorize_path, class: "general-login-icon" do %>
        <i class="fa fa-facebook-official"></i>
      <% end %>
        <p class="general-login-text">or</p>
      </div>
      <div class="general-form">
        <p class="mb-15">Log In with Password</p>
        <%= simple_form_for(User.new, url: user_session_path) do |f| %>
        <div class="form-inputs">
          <div class="form-group mb-30">
            <%= f.label :email, "Enter Email", class:"control-label input-label" %>
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, label: false %>
          </div>
          <div class="form-group mb-30">
            <%= f.label :password, "Password", class:"control-label input-label" %>
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, label: false %>
          </div>
            <%= link_to "Forgot password?", new_user_password_path, class: "help-block in-gold-500" %>
          <div class="text-center">
            <%= f.submit "Log In with Password", class:"btn btn-default mb-20" %>
          </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-5 col-md-offset-1 mb-60">
      <div class="text-center">
        <h3 class="general-subtitle">New Customer</h3>
        <%= link_to user_facebook_omniauth_authorize_path, class: "general-login-icon" do %>
        <i class="fa fa-facebook-official"></i>
      <% end %>
        <p class="general-login-text">or</p>
      </div>
      <form class="general-form">
        <div class="mb-40">
          <p class="mb-5">Quik Register</p>
          <p class="general-info-text font-12 mb-20">Youâ€™ll be able to create password later</p>
          <div class="form-group mb-30">
            <label for="email" class="control-label input-label">Enter Email</label>
            <input id="email" name="email" type="email" placeholder="Enter Email" class="form-control"/></div>
        </div>
        <button class="btn disabled mb-20">Continue to Checkout</button>
      </form>
    </div>
  </div>
</main>
