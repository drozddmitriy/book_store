%main.container.general-main-wrap
  %h1.general-title-margin= t('views.checkout.checkout_title')
  = render 'steps_header'
  .text-center.mb-40
    %h3.general-subtitle= t('views.checkout.thank')
    %p.fw-300= t('views.checkout.email', email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= t('views.checkout.order', order: @checkout.number)
        %p.general-address.mb-30= l(@checkout.completed_at, format: :date)
      = render 'complete_address', address: OrderAddressesDecorator.new(@checkout.addresses.first)
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= t('views.checkout.order', order: @checkout.number)
      %p.general-address.mb-30= l(@checkout.completed_at, format: :date)
  = render 'order_items_mobile', order: @checkout
  = render 'order_items', order: @checkout
  .text-center.general-text-right
    %p.in-gold-500.font-18= t('views.checkout.order_summary')
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'order_summary', order: @checkout
  .text-center
    = link_to t('views.checkout.back_store'), root_path, class: 'btn btn-default mb-20'
