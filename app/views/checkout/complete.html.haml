%main.container.general-main-wrap
  %h1.general-title-margin= I18n.t('views.checkout.checkout_title')
  = render 'steps_header'
  .text-center.mb-40
    %h3.general-subtitle= I18n.t('views.checkout.thank')
    %p.fw-300= I18n.t('views.checkout.email', email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= I18n.t('views.checkout.order', order: @checkout.number)
        %p.general-address.mb-30= @checkout.date_complete
      %p.general-address
        = @checkout.full_name_complete
        %br/
        = @checkout.address_complete
        %br/
        = @checkout.city_zip_complete
        %br/
        = @checkout.country_complete
        %br/
        = @checkout.phone_complete
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= I18n.t('views.checkout.order', order: @checkout.number)
      %p.general-address.mb-30= @checkout.date_complete
  = render 'line_items_mobile', order: @checkout
  = render 'line_items', order: @checkout
  .text-center.general-text-right
    %p.in-gold-500.font-18= I18n.t('views.checkout.order_summary')
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'order_summary', order: @checkout
  .text-center
    = link_to I18n.t('views.checkout.back_store'), root_path, class: 'btn btn-default mb-20'
