<main class="container general-main-wrap">
  <div class="text-center">
    <h3 class="general-login-title"><%= I18n.t('views.devise.registrations.log_in') %></h3>
    <a href="#" class="general-login-icon">
      <i class="fa fa-facebook-official"></i>
    </a>
    <p class="general-login-text"><%= I18n.t('views.devise.registrations.or') %></p>
  </div>
  <div class="general-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-inputs">
        <div class="form-group mb-30">
          <%= f.label :email, I18n.t('views.devise.registrations.enter_email'), class:"control-label input-label" %>
          <%= f.email_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, label: false, class: "form-control" %>
        </div>
        <div class="form-group mb-30">
          <%= f.label :password, I18n.t('views.devise.registrations.password'), class:"control-label input-label" %>
          <%= f.password_field :password, required: true, input_html: { autocomplete: "current-password" }, label: false, class: "form-control" %>
        </div>
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to I18n.t('views.devise.registrations.forgot_password'), new_password_path(resource_name), class: "help-block in-gold-500" %>
        <% end %>
        <% if devise_mapping.rememberable? %>
          <div class="form-group checkbox text-center mb-30">
            <label class="checkbox-label">
              <%= f.check_box :remember_me, { class: 'checkbox-input', hidden: 'true', id: 'remember_me' }, 'true', 'false' %>
              <span class="checkbox-icon">
                <i class="fa fa-check"></i>
              </span>
              <span class="checkbox-text">
                <%= I18n.t('views.devise.registrations.remember_me') %>
              </span>
            </label>
          </div>
        <% end %>
        <div class="text-center">
          <%= f.submit I18n.t('views.devise.registrations.log_in'), class:"btn btn-default mb-20" %>
        <% end %>
      </div>
    </div>
    <p class="general-sign-text text-center">Donâ€™t have an Account?
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to I18n.t('views.devise.registrations.sign_up'), new_registration_path(resource_name), class:"in-gold-500" %>
      <% end -%>
    </p>
  </main>
