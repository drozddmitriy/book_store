<main class="container general-main-wrap">
  <div class="text-center">
    <h3 class="general-login-title"><%= I18n.t('views.devise.registrations.log_in') %></h3>
    <%= link_to user_facebook_omniauth_authorize_path, class: "general-login-icon" do %>
    <i class="fa fa-facebook-official"></i>
  <% end %>
  <p class="general-login-text"><%= I18n.t('views.devise.registrations.or') %></p>
</div>
<div class="general-form">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="form-group mb-30">
      <%= f.label :email, "Enter Email", class:"control-label input-label" %>
      <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, label: false %>
    </div>
    <div class="form-group mb-30">
      <%= f.label :password, "Password", class:"control-label input-label" %>
      <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, label: false %>
    </div>
    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to I18n.t('views.devise.registrations.forgot_password'), new_password_path(resource_name), class: "help-block in-gold-500" %>
    <% end %>
    <% if devise_mapping.rememberable? %>
      <div class="form-group checkbox text-center mb-30">
        <label class="checkbox-label">
          <%= f.check_box :remember_me, { class: 'checkbox-input', hidden: 'true', id: 'remember_me' }, 'true', 'false' %>
          <span class="checkbox-icon">
            <i class="fa fa-check"></i>
          </span>
          <span class="checkbox-text">
            <%= I18n.t('views.devise.registrations.remember_me') %>
          </span>
        </label>
      </div>
    <% end %>
    <div class="text-center">
      <%= f.submit I18n.t('views.devise.registrations.log_in'), class:"btn btn-default mb-20" %>
    </div>
  </div>
<% end %>
</div>
<p class="general-sign-text text-center">Donâ€™t have an Account?
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to I18n.t('views.devise.registrations.sign_up'), new_registration_path(resource_name), class:"in-gold-500" %>
<% end -%>
</p>
</main>
