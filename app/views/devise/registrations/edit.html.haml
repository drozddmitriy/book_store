%main.container
  %h1.general-title-margin
    = t('views.devise.registrations.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      = link_to t('views.devise.registrations.address'), addresses_path, class: "tab-link"
    %li.tab-item{role: "presentation"}
      %a.tab-link{"aria-controls" => "privacy", "data-toggle" => "tab", href: "#privacy", role: "tab"}
        = t('views.devise.registrations.privacy')
  .tab-content
    #privacy.tab-pane.fade.in.active{role: "tabpanel"}
      = render 'edit_form'
