%main.container.general-main-wrap
  .text-center
    %h3.general-login-title
      = t('views.devise.passwords.new_password')
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "general-form" }) do |f|
    = f.hidden_field :reset_password_token
    .form-group.mb-30
      = f.label :password, t('views.devise.passwords.type_new_password'), class:"control-label input-label"
      = f.input :password, label:false, required: true, input_html: { autocomplete: "new-password" }
    .form-group.mb-40
      = f.label :password_confirmation, t('views.devise.registrations.confirm_password'), class:"control-label input-label"
      = f.input :password_confirmation, label:false, required: true, input_html: { autocomplete: "new-password" }
    .actions
      = f.submit t('views.devise.passwords.change'), class: "btn btn-default center-block mb-20"
