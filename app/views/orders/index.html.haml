%main.container.general-main-wrap
  %h1.mt-0.mb-25= I18n.t('views.orders.my_orders')
  %p.lead.small.mb-10.visible-xs= I18n.t('views.orders.sort_by')
  .dropdowns.dropdown.general-order-dropdown
    %a.dropdown-toggle.lead.small{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", href: "#", role: "button"}
      = @filter
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    = render 'filter'
  .visible-xs
    - @orders.each do |order|
      .general-cart-item.divider-lg-bottom.pt-0
        %table.table
          %tr
            %td.col-half
              %span.in-grey-600= I18n.t('views.orders.number')
            %td.col-half
              %span.general-order-number= order.number
          %tr
            %td
              %span.in-grey-600= I18n.t('views.orders.completed_at')
            %td
              %span.in-grey-900.font-16.fw-300= order.date
          %tr
            %td
              %span.in-grey-600= I18n.t('views.orders.status')
            %td
              %span.font-16.in-grey-900.fw-300= order.status_capitalize
          %tr
            %td
              %span.in-grey-600= I18n.t('views.orders.total')
            %td
              %strong.font-16= number_to_currency(order.total_price, unit: "€")
  .hidden-xs.mb-res-50
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600= I18n.t('views.orders.number')
          %th
            %span.in-grey-600= I18n.t('views.orders.completed_at')
          %th
            %span.in-grey-600= I18n.t('views.orders.status')
          %th
            %span.in-grey-600= I18n.t('views.orders.total')
      %tbody
        - @orders.each do |order|
          %tr
            %td
              = link_to order_path(order), class: "nav-link" do
                %span.general-order-number
                  = order.number
            %td
              %span.in-grey-900.font-16.fw-300= order.date
            %td
              %span.font-16.in-grey-900.fw-300= order.status_capitalize
            %td
              %strong.font-16= number_to_currency(order.total_price, unit: "€")
